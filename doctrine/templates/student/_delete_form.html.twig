<form method="post" action="{{ path('student_delete', {'address.id': student.address.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ student.address.id) }}">
    <button class="btn">Delete</button>
</form>
